    <configfile name="util/attachment/Attachment.properties">
      <parameter key="attachmentsAsContent.component.names">kmelia,quickinfo,almanach,userCalendar
      </parameter>
      <parameter key="attachmentsAsContent.default.value">true</parameter>
    </configfile>
    <configfile name="notificationserver/channel/smtp/smtpSettings.properties">
      <parameter key="NotificationPersonalName">Silverpeas Test</parameter>
      <parameter key="NotificationAddress">noreply@silverpeas.com</parameter>
      <parameter key="AuthorizedDomains">silverpeas.com</parameter>
      <parameter key="ForceReplyToSenderField">true</parameter>
    </configfile>
    <configfile name="util/security.properties">
      <parameter key="security.web.protection">true</parameter>
    </configfile>
    <configfile name="util/uploads/uploadSettings.properties">
      <parameter key="MaximumFileSize">4294967296</parameter>
    </configfile>
    <configfile name="multipart/multipart.properties">
      <!-- Maxi size for the uploaded files: 50MB -->
      <parameter key="MultipartParserMaxSize">200000000</parameter>
    </configfile>
    <configfile name="admin/admin.properties">
      <parameter key="GroupSynchroCron">0,10,20,30,40,50 * * * *</parameter>
    </configfile>
    <configfile name="peasCore/SessionManager.properties">
      <!-- session time-out : 3 hours for the users et 6 hours for the administrators -->
      <parameter key="adminSessionTimeout">360</parameter>
      <parameter key="userSessionTimeout">180</parameter>
    </configfile>
    <configfile name="notificationManager/settings/notificationManagerSettings.properties">
      <parameter key="multiChannelNotification">true</parameter>
      <parameter key="notif.defaultChannels">BASIC_SILVERMAIL BASIC_SMTP_MAIL</parameter>
    </configfile>
    <configfile name="jobStartPagePeas/settings/jobStartPagePeasSettings.properties">
      <parameter key="quota.space.components.activated">true</parameter>
      <parameter key="quota.space.datastorage.activated">true</parameter>
      <parameter key="quota.space.datastorage.default.maxCount">4096</parameter>
      <parameter key="quota.personalspace.datastorage.default.maxCount">10</parameter>
    </configfile>
